# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Database Connection
# Local: mongodb://localhost:27017/airtable-forms
# Cloud: mongodb+srv://<user>:<password>@cluster.mongodb.net/dbname
MONGO_URI=mongodb://localhost:27017/airtable-forms

# Security
# Generate a secure key: openssl rand -base64 32
JWT_SECRET=replace_with_secure_random_string

# Airtable OAuth Configuration
# Get these from https://airtable.com/create/oauth
AIRTABLE_CLIENT_ID=your_client_id
AIRTABLE_CLIENT_SECRET=your_client_secret

# Redirect URI
# Local: http://localhost:3000/api/auth/airtable/callback
# Production: https://your-railway-app.up.railway.app/api/auth/airtable/callback
AIRTABLE_REDIRECT_URI=http://localhost:3000/api/auth/airtable/callback

# Webhooks Configuration
# Must be a public HTTPS URL.
# Local (Ngrok): https://your-ngrok-url.ngrok.io
# Production: https://your-railway-app.up.railway.app
WEBHOOK_URL=http://localhost:3000

# Frontend URL (For CORS)
# Local: http://localhost:5173
# Production: https://your-vercel-app.vercel.app
FRONTEND_URL=http://localhost:5173
